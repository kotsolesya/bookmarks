<%- if devise_mapping.omniauthable? %>
    <%= link_to omniauth_authorize_path(resource_name, :facebook), class: "btn btn-facebook btn-social" do %>
      <span class="fa fa-facebook"></span> Sign in with Facebook
    <% end %>
<% end -%> <br>

<%- if controller_name != 'sessions' %>
  <%= link_to t('navbar.sign_in'), new_session_path(resource_name) %><br />
<% end -%>


<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.forget_password'), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.confirmation_instructions'), new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.unlock_instructions'), new_unlock_path(resource_name) %><br />
<% end -%>
