
<h2><%= t('navbar.sign_up') %></h2>
<% resource.build_profile %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
  <%= f.label :email %><br/>
  <%= f.email_field :email, autofocus: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label t('devise.password') %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %>) <%= t('devise.minimum_characters') %></em>
  <% end %><br/>
  <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label t('devise.password_confirmation') %><br/>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.fields_for :profile do |builder| %>
  <div class="form-group">
    <%= builder.label t('registration_form.name') %><br/>
    <%= builder.text_field :first_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= builder.label t('registration_form.last_name') %><br/>
    <%= builder.text_field :last_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= builder.label t('registration_form.phone') %><br/>
    <%= builder.text_field :phone, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= builder.label t('registration_form.city') %><br/>
    <%= builder.text_field :city, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= builder.label t('registration_form.district') %><br/>
    <%= builder.text_field :district, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= builder.label t('registration_form.microdistrict') %><br/>
    <%= builder.text_field :microdistrict, class: 'form-control' %>
  </div>
  <% end %>
</div>

<div class="checkbox-group required">
  <%= f.label t('registration_form.agreement') %><br/>
  <input onchange="this.setCustomValidity(validity.valueMissing ? 'I18n.check_box_massage' : '');" id="field_terms" type="checkbox">
</div>

<div class="actions">
  <%= f.submit t('navbar.sign_up_btn'), class: 'btn btn-primary' %>
</div>
<% end %>



<script type="text/javascript">
var massage = I18n.check_box_massage
document.getElementById("field_terms").setCustomValidity(massage);
</script>
