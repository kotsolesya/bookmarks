<%= form_tag(posts_path, method: "get", id: 'search-form', remote: true) do %>
<p>Search url</p>
  <%= text_field_tag :search, params[:search], placeholder: 'Search Url' %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
<% if @posts.blank? %>
  <p><%= params[:search] %>.</p>
<% else %>
  <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>
