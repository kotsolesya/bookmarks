<!DOCTYPE html>
<html>
    <head>
        <title>Bookmarks</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
            <nav class="navbar navbar-default" role="navigation">

                            <!-- Brand and toggle get grouped for better mobile display -->
                            <div class="navbar-header">
                                <div class="navbar-brand navbar-brand-centered"><%= link_to 'Exam GeekHub', '/' %></div>
                            </div>

                            <!-- Collect the nav links, forms, and other content for toggling -->
                            <div class="collapse navbar-collapse" id="navbar-brand-centered">
                                <ul class="nav navbar-nav">
                                    <li>
                                        <a href="#">Ruby on Rails</a>
                                    </li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">

                                    <% if user_signed_in? %>
                                    <li id="email"><p class="navbar-text">Signed in as
                                                    <%= current_user.email %>
                                                  </p>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Task
                                            <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li>
                                                <%= link_to 'Update profile', edit_user_password_path %>
                                            </li>
                                            <li>
                                                <%= link_to 'Posts', posts_path%>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><%= link_to "Log out", destroy_user_session_path, :method=>'delete'  %></li>
                                </ul>
                            <% else %>
                                <ul class="nav navbar-nav navbar-right">

                                    <li><%= link_to 'Log in', user_facebook_omniauth_authorize_path %></li>
                                    <li><%= link_to 'Sign up', new_user_registration_path %></li>

                                </ul>
                                <% end %>

                            </div>
                            <!-- /.navbar-collapse -->

                        <!-- /.container-fluid -->
                    </nav>
                    <div class="container">
                        <%= yield %>
                    </div>
                </body>



















        </body>
</html>
